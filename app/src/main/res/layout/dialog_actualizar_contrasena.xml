<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardElevation="8dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/txtContrasenaActualizar"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:background="@drawable/edittext_background"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="16dp"
            android:ems="10"
            android:hint="Nueva Contraseña"
            android:inputType="textPassword"
            android:paddingLeft="40dp"
            android:textColor="#7C7C7C"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/txtContrasenaActualizar2"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/edittext_background"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="16dp"
            android:ems="10"
            android:hint="Repetir Contraseña"
            android:inputType="textPassword"
            android:paddingLeft="40dp"
            android:textColor="#7C7C7C"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtRecuperarPregunta"
            android:layout_width="278dp"
            android:layout_height="35dp"
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/ic_pregunta"
            android:drawablePadding="16dp"
            android:paddingLeft="40dp"
            android:paddingTop="8dp"
            android:text="Pregunta de seguridad *"
            android:textColor="#7C7C7C"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txtRespuestaActualizar"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/edittext_background"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="16dp"
            android:hint="Respuesta de seguridad*"
            android:inputType="text"
            android:paddingLeft="40dp"
            android:textColor="#7C7C7C"
            android:textSize="16sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>